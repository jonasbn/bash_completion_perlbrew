root = true

# All file types
[*]

# Preferred characterset encoding
charset = utf-8

# Preferred indentation style
indent_style = space
indent_size = 4

# Unix-style newlines with a newline ending the file
end_of_line = lf
insert_final_newline = true

# Trim possible trailing whitespace
trim_trailing_whitespace = true

[perlbrew]
max_line_length = off
tab_width = 8

[*.{md,mkdn}]
max_line_length = off

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.code-workspace]
indent_style = tab
indent_size = 4
